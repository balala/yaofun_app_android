<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblack"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homeitem4_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_17"
        android:text="找不到想找的内容？"
        android:textColor="@color/colordeepgray"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/homeitem4_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeitem4_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_6"
        android:text="使用关键词搜索。"
        android:textColor="#ff9b9b9b"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/home4_search"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/homeitem4_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeitem4_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home4_search"
        android:layout_marginTop="@dimen/dp_40" />

