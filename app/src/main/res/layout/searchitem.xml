<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_270"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_138"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_height="@dimen/dp_92"
        android:layout_gravity="center"
        android:src="@drawable/home_watch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_17"
        android:text="找不到想找的内容？"
        android:textColor="@color/colordeepgray"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_6"
        android:text="使用关键词搜索。"
        android:textColor="@color/colordeepgray"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/home_search2"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_38"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@mipmap/search" />
</LinearLayout>