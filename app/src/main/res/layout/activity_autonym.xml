<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AutonymActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/authentication_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:id="@+id/autonymback"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@drawable/fanhui" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_117"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginRight="@dimen/dp_146"
            android:text="实名认证"
            android:textColor="@color/colorblack"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_119"
                android:text="真实姓名"
                android:textColor="@color/autonymblack"
                android:textSize="16sp" />

            <com.balala.yaofun.util.CustomEditText
                android:id="@+id/authentication_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_155"
                android:layout_marginRight="@dimen/dp_18"
                android:hint="请输入您的姓名"
                android:inputType="phone"
                android:maxLength="13"
                android:maxLines="1"
                android:textColor="#BCBBC1"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_217"
                android:text="证件类型"
                android:textColor="@color/autonymblack"
                android:textSize="@dimen/sp_16" />
            <!--xiala-->
            <RelativeLayout
                android:id="@+id/authentication_xiala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_255"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/authentication_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="护照"
                    android:textColor="@color/autonymblack"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_9"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_18"
                    android:src="@drawable/xiala" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_370"
                android:layout_height="@dimen/dp_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_290"
                android:background="@color/fungray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_310"
                android:text="护照证件号"
                android:textColor="@color/autonymblack"
                android:textSize="16sp" />

            <com.balala.yaofun.util.CustomEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_345"
                android:text="请输入您的护照证件号"
                android:textColor="#ffbcbbc1"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_370"
                android:layout_height="@dimen/dp_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_375"
                android:background="@color/fungray" />


            <LinearLayout
                android:id="@+id/lltt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_375"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/passportbutton"
                    android:layout_width="@dimen/dp_165"
                    android:layout_height="@dimen/dp_166"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_9"
                    android:orientation="vertical"
                    android:background="@drawable/autonymbackgrounditem">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_29"
                        android:gravity="center"
                        android:text="1.请手持护照拍摄"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2.请确保面部清晰"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_52"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_57"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_57"
                        android:src="@drawable/shangchuan" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/headbutton"
                    android:layout_width="@dimen/dp_165"
                    android:layout_height="@dimen/dp_166"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_9"
                    android:orientation="vertical"
                    android:background="@drawable/autonymbackgrounditem">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_39"
                        android:gravity="center"
                        android:text="护照信息清晰可确认"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_52"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_57"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_57"
                        android:src="@drawable/shangchuan" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lltt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/headimg"
                    android:layout_width="@dimen/dp_339"
                    android:layout_height="@dimen/dp_174"
                    android:src="@drawable/morentu" />

                <ImageView
                    android:id="@+id/passportimg"
                    android:layout_width="@dimen/dp_339"
                    android:layout_height="@dimen/dp_174"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@drawable/morentu" />

                <Button
                    android:id="@+id/autonymup"
                    android:layout_width="@dimen/dp_339"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_47"
                    android:layout_marginBottom="@dimen/dp_58"
                    android:background="@drawable/autonymyuan"
                    android:text="提交"
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>