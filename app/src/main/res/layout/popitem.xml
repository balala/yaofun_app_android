<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_124"
    android:layout_height="@dimen/dp_186"
    android:background="@drawable/popyuan"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popitem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_21"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:src="@drawable/homedetails_share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/homedetails_share"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popitem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_29"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:src="@drawable/homedetails_alter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/homedetails_alter"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popitem3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_29"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:src="@drawable/homedetails_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/homedetails_delete"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popitem4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_29"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:src="@drawable/homedetails_report" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/homedetails_inform"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>

</LinearLayout>