<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AuthenticationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/authenticationback"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@drawable/fanhui" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_117"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginRight="@dimen/dp_146"
            android:text="实名认证"
            android:textColor="@color/colorblack"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_134"
        android:text="手机号"
        android:textColor="#ff333333"
        android:textSize="16sp" />

    <com.balala.yaofun.util.CustomEditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_155"
        android:layout_marginRight="@dimen/dp_18"
        android:inputType="phone"
        android:maxLength="13"
        android:maxLines="1"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_223"
        android:text="验证码"
        android:textColor="@color/colorblack"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/coode_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_259"
        android:layout_marginRight="@dimen/dp_18"
        android:hint="请输入你的验证码"
        android:inputType="phone"
        android:maxLength="5"
        android:maxLines="1"
        android:textColor="@color/colordeepgray"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:id="@+id/authentication_clear"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_270"
        android:layout_marginRight="@dimen/dp_55"
        android:src="@mipmap/delete"
        android:visibility="gone" />

    <TextView
        android:id="@+id/give_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_268"

        android:layout_marginRight="@dimen/dp_30"
        android:text="获取验证码"
        android:textColor="@color/colorblack"
        android:textSize="14sp" />

    <Button
        android:id="@+id/up"
        android:layout_width="@dimen/dp_339"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_194"
        android:background="@drawable/yuangarys"
        android:text="提交"
        android:textColor="#BCBBC1" />
</RelativeLayout>