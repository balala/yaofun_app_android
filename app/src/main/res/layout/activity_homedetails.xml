                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/sp_15" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/allrv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:nestedScrollingEnabled="false" />

                    <ImageView
                        android:id="@+id/homedetails_img6"
                        android:layout_width="@dimen/dp_39"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_21"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_315"
                        android:src="@drawable/xiahua" />

                    <include layout="@layout/homedetails_item2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_53"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="给发起人留言"
                            android:textColor="@color/colorwhite"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:id="@+id/homedetails_wirte"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_19"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_328"
                            android:layout_marginRight="@dimen/dp_18"
                            android:src="@drawable/homedetails_word" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/homedetails_rv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_43"
                        android:layout_marginRight="@dimen/dp_18"
                        android:nestedScrollingEnabled="false" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_140"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_147"
                        android:text="没有更多数据了"
                        android:textColor="@color/colordeepgrays"
                        android:textSize="@dimen/sp_13" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_48"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/homedetails_message"
                            android:layout_width="@dimen/dp_21"
                            android:layout_height="@dimen/dp_22"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/dp_21"
                            android:layout_marginTop="@dimen/dp_35"
                            android:layout_marginBottom="@dimen/dp_26"
                            android:src="@drawable/homedetails_speak" />

                        <Button
                            android:id="@+id/homedetailsgo"
                            android:layout_width="@dimen/dp_148"
                            android:layout_height="@dimen/dp_45"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/dp_72"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_114"
                            android:layout_marginBottom="@dimen/dp_14"
                            android:background="@drawable/yuan"
                            android:gravity="center"
                            android:text="立即报名"
                            android:textColor="@color/black" />
                    </RelativeLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/homedetails_people"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_110"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_670"
                    android:layout_marginRight="@dimen/dp_10" />

            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/homedetails_back"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/homedetails_menu"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/topmenu" />
        </RelativeLayout>

