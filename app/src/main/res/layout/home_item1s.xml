<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorblack"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iconcard1"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/item1title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_135"
        android:layout_marginTop="@dimen/dp_20"
        android:text="复古万圣节派对VintageDanc"
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/item1time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_135"
        android:layout_marginTop="@dimen/dp_67"
        android:text="08/09 本周六 18:00"
        android:textColor="@color/colordeepgray"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_135"
        android:layout_marginTop="@dimen/dp_87"
        android:src="@drawable/home_icon" />

    <TextView
        android:id="@+id/item1site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_87"
        android:text="望京今乐轰趴"
        android:textColor="@color/colordeepgray"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_135"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item1priceyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/colordeepgray"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item1price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colordeepgray"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>


</RelativeLayout>