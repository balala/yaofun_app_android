<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AmapRouteActivity">


    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mapll"
         />


    <LinearLayout
        android:id="@+id/mapll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/maptext1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="亚运村图书大厦（北京市朝阳区）"
            android:textColor="@color/mapblack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/maptex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_22"
            android:text="亚运村图书大厦（北京市朝阳区）"
            android:textColor="@color/mapgray"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <ImageView
        android:id="@+id/mapgo"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentTop="@dimen/dp_5"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_19"
        android:src="@drawable/mapicon" />

    <ImageView
        android:id="@+id/mapback"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@drawable/mapback" />
</RelativeLayout>