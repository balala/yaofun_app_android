<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/reportback"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50">

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_35"
                android:src="@mipmap/fanhui" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_136"
            android:layout_marginTop="@dimen/dp_35"
            android:text="举报"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:text="本群存在什么问题？"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/rubbish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="垃圾广告营销群"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群成员存在赌博行为"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群成员存在欺诈骗钱行为"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gongji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群成员存在恶意攻击谩骂行为"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群成员传播谣言信息"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/se"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="淫秽色情"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="违法有害"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/say"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/reportchange"
            android:button="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我有话说"
            android:textColor="@color/autonymblack"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_37">

        <ImageView
            android:layout_width="@dimen/dp_338"
            android:layout_height="@dimen/dp_163"
            android:layout_centerHorizontal="true"
            android:background="@drawable/reportbackground" />

        <com.balala.yaofun.util.CustomEditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:hint="为了给您提供更好的服务，请尽量详述您的意见~"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/takephoto"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_98"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/reportbackground2" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_63"
            android:layout_marginTop="@dimen/dp_114"
            android:src="@drawable/fun_camera" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_137"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="添加照片"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_134"
            android:layout_marginRight="@dimen/dp_48">

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/500"
                android:textColor="#ff999999"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/upgo"
        android:layout_width="@dimen/dp_167"
        android:layout_height="@dimen/dp_37"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_49"
        android:background="@drawable/bluedbutton"
        android:text="提交"
        android:textColor="@color/colorwhite" />

</LinearLayout>