<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sharepopbackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享至"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/colordeepgray"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tongxunlu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_24"
                android:src="@drawable/tongxunlu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="Funner"
                android:textColor="@color/colorblack"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareweixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_24"
                android:src="@drawable/weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/colorblack"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pengyouquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_24"
                android:src="@drawable/pengyouquan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/colorblack"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_47"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_24"
                android:src="@drawable/qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/colorblack"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#ffe9e9ee" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_21"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_16" />
</LinearLayout>